<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/quizMandarin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mandarin Quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/quizHindi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hindi Quiz"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/quizMandarin"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/quizSpanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish Quiz"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/quizHindi"
        android:layout_marginTop="30dp" />
</RelativeLayout>